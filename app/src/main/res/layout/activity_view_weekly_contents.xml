<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewWeeklyContentsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/zakum_chaos"
                        android:layout_width="192dp"
                        android:layout_height="216dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        app:srcCompat="@drawable/zakum" />

                    <ImageView
                        android:id="@+id/clearzakum_chaos"
                        android:layout_width="144dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/clear" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/hilla_hard"
                        android:layout_width="192dp"
                        android:layout_height="216dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        app:srcCompat="@drawable/hilla" />

                    <ImageView
                        android:id="@+id/clearhilla_hard"
                        android:layout_width="144dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/clear" />
                </FrameLayout>

            </TableRow>

            <TableRow
